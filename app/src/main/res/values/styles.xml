<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:spinnerDropDownItemStyle">@style/venueSpinner</item>
    </style>

    <style name="calendar" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">#42DE95</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:color">@color/black</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="radius">
        <item name="android:background">@drawable/radius</item>
    </style>

    <style name="book_btn" parent="Theme.AppCompat">
        <item name="android:background">@drawable/receipt_background</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="email_password_login">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/radius</item>
    </style>

    <style name="SpinnerDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#42DE95</item>
    <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#42DE95</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="venueSpinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:background">@drawable/light_green_to_dark_green_1</item>
        <item name="android:popupBackground">@drawable/light_green_to_dark_green_1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:color">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Stats Fragment-->
    <style name="gradient_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/nav_gradient</item>
    </style>
</resources>
